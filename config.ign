  },
  "passwd": {
    "users": [
      {
        "name": "core",
        "passwordHash": "",
        "sshAuthorizedKeys": [
          "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIJT4EA7SV6DUus3Lkb7O5JBBKFKGnZW97/Wu4tGW5e/v kama@kafkanet.ch"
        ],
        "groups": [
          "sudo"

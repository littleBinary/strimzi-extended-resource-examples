  "systemd": {
    "units": [
      {
        "name": "update-motd.service",
        "enabled": true,
        "contents": "[Unit]\nDescription=Update the Message of the Day (MOTD)\nAfter=network.target\n\n[Service]\nType=oneshot\nExecStart=/usr/bin/echo \"System last updated at: $(date)\" >> /etc/motd\nRemainAfterExit=true\n\n[Install]\nWantedBy=multi-user.target"
      }
    ]
  }
}
